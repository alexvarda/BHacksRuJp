{
  "author": "FinBlock Team",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
    "default_popup": "button/popup.html",
    "default_title": "__MSG_finblock_adblock_click_for_details__"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "js/bandaids.js"
      ],
      "matches": [
        "*://*.facebook.com/*",
        "*://*.mail.live.com/*",
        "*://*.mastertoons.com/*",
        "*://*.mobilmania.cz/*",
        "*://*.zive.cz/*",
        "*://*.doupe.cz/*",
        "*://*.e15.cz/*",
        "*://*.sportrevue.cz/*",
        "*://*.autorevue.cz/*",
        "*://*.youtube.com/*"
      ],
      "run_at": "document_start"
    },
    {
      "all_frames": true,
      "js": [
        "lib/jquery.min.js",
        "lib/punycode.min.js",
        "js/port.js",
        "js/functions.js",
        "filtering/filteroptions.js",
        "js/adblock_start_common.js",
        "js/adblock_start_chrome.js",
        "finblock/contentscript.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_start"
    },
    {
      "all_frames": false,
      "js": [
        "uiscripts/blacklisting/rightclick_hook.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "default-src 'self'; style-src 'self' 'unsafe-inline'; connect-src *; img-src *;",
  "default_locale": "en",
  "description": "FinBlock is like an ad blocker, but instead of blocking ads it shows you pictures of cats (configurable)",
  "icons": {
    "128": "img/icon128.png",
    "16": "img/icon16.png",
    "48": "img/icon48.png"
  },
  "incognito": "spanning",
  "manifest_version": 2,
  "minimum_chrome_version": "49",
  "name": "FinBlock",
  "optional_permissions": [
    "management"
  ],
  "options_page": "options/index.html",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "ws://*/*",
    "wss://*/*",
    "contextMenus",
    "tabs",
    "idle",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "alarms",
    "storage",
    "notifications"
  ],
  "version": "1.0.0",
  "web_accessible_resources": [
    "img/icon24.png",
    "jquery/css/images/ui-bg_inset-hard_100_fcfdfd_1x100.png",
    "jquery/css/images/ui-icons_056b93_256x240.png",
    "jquery/css/images/ui-icons_d8e7f3_256x240.png",
    "jquery/css/jquery-ui.custom.css",
    "jquery/css/override-page.css",
    "finblock/pix/1.jpg",
    "finblock/pix/5.jpg",
    "finblock/pix/6.jpg",
    "finblock/pix/7.jpg",
    "finblock/pix/8.jpg",
    "finblock/pix/9.jpg",
    "finblock/pix/big1.jpg",
    "finblock/pix/big2.jpg",
    "finblock/pix/big3.jpg",
    "finblock/pix/big4.jpg",
    "finblock/pix/small1.jpg",
    "finblock/pix/small2.jpg",
    "finblock/pix/small3.jpg",
    "finblock/pix/small4.jpg",
    "finblock/pix/small5.jpg",
    "finblock/pix/small6.jpg",
    "finblock/pix/small7.jpg",
    "finblock/pix/small8.jpg",
    "finblock/pix/tall3.jpg",
    "finblock/pix/tall4.jpg",
    "finblock/pix/tall5.jpg",
    "finblock/pix/tall6.jpg",
    "finblock/pix/wide1.jpg",
    "finblock/pix/wide2.jpg",
    "finblock/pix/wide3.jpg",
    "finblock/pix/wide4.jpg",
    "img/icon19.png",
    "img/icon24.png"
  ]
}
